# ============================================================================
# Datadog OTLP Cloud Ingestion Configuration
# ============================================================================

# Datadog API Key (required)
# Get your API key from: https://app.datadoghq.com/organization-settings/api-keys
# For EU: https://app.datadoghq.eu/organization-settings/api-keys
DATADOG_API_KEY=your_api_key_here

# Datadog Site (optional, defaults to datadoghq.com)
# Options:
#   - datadoghq.com (US1)
#   - datadoghq.eu (EU)
#   - us3.datadoghq.com (US3)
#   - us5.datadoghq.com (US5)
#   - ap1.datadoghq.com (AP1)
DATADOG_SITE=datadoghq.com

# ============================================================================
# Application Configuration
# ============================================================================

# Service Name (optional, defaults to example-datadog)
SERVICE_NAME=example-datadog

# Environment (optional, defaults to development)
# Common values: development, staging, production
ENVIRONMENT=development

# Service Version (optional, auto-detected from package.json if not set)
VERSION=

# Log Level (optional, defaults to info)
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Enable log export via OTLP (optional, defaults to true)
# Set to false if you only want traces and metrics
ENABLE_LOG_EXPORT=true
